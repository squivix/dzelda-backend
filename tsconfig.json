{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "ES6",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "sourceMap": true,
  }
}
