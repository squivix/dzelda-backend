{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "ES2022",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "sourceMap": true,
  }
}
