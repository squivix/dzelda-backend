{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "ES2022",
    "rootDir": ".",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": [
      "./types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  }
}
