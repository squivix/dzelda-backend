{
  "name": "dzelda-backend",
  "version": "1.0.0",
  "description": "Backend of Dzelda: A free and open source language learning site.",
  "main": "build/src/main.js",
  "type": "module",
  "scripts": {
    "pretest": "npm run migrate",
    "test": "npx vitest --no-watch",
    "compile": "npx swc src -d ./build/src &&  npx swc tests -d ./build/tests",
    "clean": "rm -rf ./build/* && npm run compile",
    "premake-migrations": "npm run clean",
    "make-migrations": "mikro-orm migration:create",
    "premigrate": "npm run clean",
    "migrate": "mikro-orm migration:up",
    "fresh": "mikro-orm migration:fresh --seed",
    "dev": "env-cmd -f ./env/dev.env tsx --watch ./src/main.ts",
    "generate-schema": "npx openapi-typescript specs/dzelda-api.json --output specs/schema.ts"
  },
  "author": "squivix <devintheamateurdevin@gmail.com> (https://github.com/squivix)",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/one-line-logger": "^1.0.0",
    "@fastify/static": "^6.6.1",
    "@mikro-orm/core": "^5.6.7",
    "@mikro-orm/postgresql": "^5.6.7",
    "dotenv": "^16.0.3",
    "env-cmd": "^10.1.0",
    "fastify": "^4.9.2",
    "fastify-formidable": "^3.0.2",
    "file-type": "^18.2.0",
    "fs-extra": "^11.1.0",
    "http-status-codes": "^2.2.0",
    "image-size": "^1.0.2",
    "vavite": "^1.5.2",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@mikro-orm/cli": "^5.6.7",
    "@mikro-orm/migrations": "^5.6.7",
    "@mikro-orm/seeder": "^5.6.7",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.14",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.11.2",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "depcheck": "^1.4.3",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "form-data": "^4.0.0",
    "openapi-typescript": "^6.1.0",
    "tsx": "^3.12.7",
    "typescript": "^4.8.4",
    "vite": "^3.2.5",
    "vitest": "^0.33.0"
  },
  "mikro-orm": {
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./build/src/mikro-orm.config.js"
    ]
  }
}
