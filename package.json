{
  "name": "dzelda-backend",
  "version": "1.0.0",
  "description": "Backend of Dzelda: A free and open source language learning site.",
  "main": "build/src/main.js",
  "type": "module",
  "scripts": {
    "pretest": "./scripts/reset-test-db.sh",
    "pretest-ui": "./scripts/reset-test-db.sh",
    "test": "NODE_ENV=test vitest --no-watch",
    "test-ui": "NODE_ENV=test vitest --ui",
    "compile": "rm -rf build/* && npx swc src -d ./build/src &&  npx swc test -d ./build/test",
    "clean": "rm -rf ./build/* && npm run compile",
    "make-migrations": "mikro-orm migration:create",
    "migrate": "mikro-orm migration:up",
    "drop": "./scripts/drop-db.sh",
    "prefresh": "npm run drop && npm run clean",
    "fresh": "mikro-orm migration:fresh",
    "unmigrate": "mikro-orm migration:down --to 0",
    "premake-migrations": "npm run clean",
    "premigrate": "npm run clean",
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir build/src",
    "watch-dev": "nodemon --watch \"build/src/**/*\" -e js ./build/src/main.js"
  },
  "author": "squivix <devintheamateurdevin@gmail.com> (https://github.com/squivix)",
  "license": "MIT",
  "dependencies": {
    "@fastify/one-line-logger": "^1.0.0",
    "@mikro-orm/core": "^5.5.0",
    "@mikro-orm/postgresql": "^5.5.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.9.2",
    "http-status-codes": "^2.2.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@mikro-orm/cli": "^5.5.0",
    "@mikro-orm/migrations": "^5.5.0",
    "@mikro-orm/seeder": "^5.5.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.14",
    "@types/express": "^4.17.14",
    "@types/koa": "^2.13.5",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vitest/coverage-c8": "^0.25.1",
    "@vitest/coverage-istanbul": "^0.24.3",
    "@vitest/ui": "^0.24.3",
    "concurrently": "^7.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.1",
    "typescript": "^4.8.4",
    "vite": "^3.2.1",
    "vitest": "^0.24.3"
  },
  "mikro-orm": {
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./build/src/mikro-orm.config.js"
    ]
  }
}
